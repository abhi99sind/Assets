<!DOCTYPE html>
<html lang="en-us">
    <head>
        <title><%= main.assetName%></title>
        <meta charset="UTF-8">
        
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet"  href="/css/lightslider.css"/>
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/normalize.css">
        <link rel="stylesheet" href="/css/Store_Listing_Styles.css">

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="/js/lightslider.js"></script> 
        <script src="/js/Showcase_Slider_Prop.js"></script>
    </head>
    <body>
        <header>
            <div class="Container">

            </div>
        </header>

        <main class="Container">
            <article id="Listing_Section">
                
                <section id="Asset_Showcase">  
                    <div id="Showcase_Carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#Showcase_Carousel" data-slide-to="0" class="active"></li>
                            <%for(var i=1; i <count-1 ; i++ ){%>
                                <li data-target="#Showcase_Carousel" data-slide-to="<%=i%>"></li>
                            <%}%>                                    
                        </ol>
                        <div class="carousel-inner">
                            <%for (let file of main.MainFile){%>
                                <% if(file.mimetype === "image/png" || file.mimetype === "image/jpg" || file.mimetype === "image/jpeg" && main.MainFile.indexOf(file) === 1) {%>                                        
                            <div class="carousel-item active">
                            <img src="/<%=file.path%>" class="d-block w-100" alt="...">
                            </div>
                            <%} else if (file.mimetype === "image/png" || file.mimetype === "image/jpg" || file.mimetype === "image/jpeg" ){%>
                                <div class="carousel-item">
                                    <img src="/<%=file.path%>" class="d-block w-100" alt="...">
                                </div> 
                            <%}}%>                                       
                        </div>
                        <a class="carousel-control-prev" href="#Showcase_Carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#Showcase_Carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <div id="Showcase_Gallery">
                        <ul id="responsive" class="content-slider">
                                <%for (let file of main.MainFile){%>
                                    <% if(file.mimetype === "image/png" || file.mimetype === "image/jpg" || file.mimetype === "image/jpeg") {%>
                            <li>
                                <img src="/<%=file.path%>" class="lower_image">                
                            </li>
                            <%}}%>              
                        </ul>     
                    </div>                                                                 
                </section>
                
                <section id="Asset_Details">
                    <div id="Details_Coloum">
                        <div id="Primary_Info">
                            <div class="Horizontal_Rule"></div>  
                            <p id="Publisher_Name"><%=main.uploaderName%></p>
                            <h2 id="Tittle"><%= main.assetName%></h2>
                            <p id="Buy_Price">$<%=main.price%></p>
                            <div class="Clear_Both"></div>
                            <p id="Rating">★ ★ ★ ★ ★ </p>                            
                            <!-- <button id="Buy_Button">Buy</button> -->
                            <a href="/<%=main.MainFile[0].path%>"><button id="Buy_Button">Download</button></a>
                            <div class="Clear_Both"></div>
                            <div class="Horizontal_Rule_2"></div>  

                        </div>
                        <section id="Asset_Desc">
                            
                        </section>
                    </div>                    

                </section>
            </article>
        </main>

        <footer>
            <div class="Container">

            </div>
        </footer>
        <script>
            
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>